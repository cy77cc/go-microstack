    "version": "0.2.0",
    "configurations": [
        {
            "name": "gateway",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/gateway/cmd/gateway/.",
            "args": [
                "-config",
                "${workspaceFolder}/gateway/etc/config.yaml"
            ],
            "envFile": "${workspaceFolder}/.env",
            "asRoot": true,
        },
        {
            "name": "fileserver-api",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/fileserver/api/.",
            "args": [
                "-f",
                "${workspaceFolder}/fileserver/api/etc/fileserver.yaml"
            ],
            "envFile": "${workspaceFolder}/.env",
            "asRoot": true,
        },
        {
            "name": "fileserver-rpc",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/fileserver/rpc/.",
            "args": [
                "-f",
                "${workspaceFolder}/fileserver/rpc/etc/fileserver.yaml"
            ],
            "envFile": "${workspaceFolder}/.env",
            "asRoot": true,
        },
        {
            "name": "usercenter-api",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/usercenter/api/.",
            "args": [
                "-f",
                "${workspaceFolder}/usercenter/api/etc/usercenter.yaml"
            ],
            "envFile": "${workspaceFolder}/.env",
            "asRoot": true,
        },
        {
            "name": "usercenter-rpc",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/usercenter/rpc/.",
            "args": [
                "-f",
                "${workspaceFolder}/usercenter/rpc/etc/usercenter.yaml"
            ],
            "envFile": "${workspaceFolder}/.env",
            "asRoot": true,
        },
    ]
}